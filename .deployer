function deploy {
    helm install --debug --name $1 charts/$1 --values charts/$1/values.yaml --values secrets/secrets.yaml --namespace default
}

function destroy {
    helm delete --purge $1
}

function redeploy {
    destroy $1
    deploy $1
}

function deploy_all {
    redeploy jobs
    redeploy blog
    redeploy jupyter
    redeploy ingress
}