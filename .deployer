function deploy {
    helm install --debug --name $1 ~/zigdata/zigdata/charts/$1 --values ~/zigdata/zigdata/charts/$1/values.yaml --values  ~/zigdata/zigdata/secrets/secrets.yaml --namespace default
}

function destroy {
    helm delete --purge $1
}

function redeploy {
    destroy $1
    deploy $1
}

function redeploy_all {
    redeploy volumes
    redeploy secrets
    redeploy jobs
    redeploy blog
    redeploy jupyter
    redeploy viz
    redeploy ingress
}

function redeploy_apps {
    redeploy blog
    redeploy jupyter
    redeploy viz
}